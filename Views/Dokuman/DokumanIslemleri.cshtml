@model InsanKaynaklarıProje.Models.Entity.DokumanlarDepartmanlarViewModel
@{
    Layout = null;
    var isim = Session["name"] as string;
    var departman = Session["dep"] as string;
    
    
}


<!DOCTYPE html>

<html>
<head>


    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: powderblue;
        }

        .img1 {
            width: 760px;
        }
    </style>
</head>
<body>
    <!-- Registration 4 - Bootstrap Brain Component -->
    <section class="p-3 p-md-4 p-xl-5">
        <div class="container">
            <div class="card border-light-subtle shadow-sm">
                <div class="row g-0">
                    <div class="col-12 col-md-6">

                        <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="~/Content/image/img1.jpg" alt="image">
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="row">
                                <div class="col-12">
                                    <div class="mb-5">

                                    </div>
                                </div>
                            </div>

                            @using (Html.BeginForm("DokumanKaydet", "Dokuman", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="row gy-3 gy-md-4 overflow-hidden">
                                    <div class="col-12">
                                        <label class="form-label">Gidecek Departman<span class="text-danger">*</span></label>
                                        @Html.DropDownListFor(m => m.Dokumanlar.DokumanGelenDepartman, new SelectList(Model.IK_Dprtmn, "DepartmanID", "DepartmanIsim"), "Seçiniz", new { @class = "form-control" })
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Açıklama<span class="text-danger">*</span></label>
                                        @Html.TextBoxFor(m => m.Dokumanlar.DokumanAcıklama, new { @class = "form-control" })

                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">Dokuman <span class="text-danger">*</span></label>
                                        <div>
                                            <label class="form-label"><span class="text-danger">*</span></label>
                                            <input type="file" name="File" class="form-control" />
                                        </div>
                                    </div>

                                    <br />
                                    <div class="d-grid">
                                        <button class="btn bsb-btn-xl btn-primary" type="submit">KAYDET</button>
                                    </div>
                                </div>
                            

                                @Html.HiddenFor(m => m.Dokumanlar.DokumanID)
                                
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>